[Unit]
Description=OpenAI Reverse Proxy (Rust, rustls)
After=network-online.target
Wants=network-online.target

[Service]
Environment=SERVICE_TOKEN=replace-with-strong-random-token
Environment=OPENAI_API_KEY=sk-...
Environment=BIND_HOST=0.0.0.0
Environment=BIND_PORT=8080
Environment=RUST_LOG=info
ExecStart=/opt/openai-proxy/openai-proxy
User=proxy
Group=proxy
Restart=on-failure
NoNewPrivileges=true
ProtectSystem=full
ProtectHome=true
PrivateTmp=true
AmbientCapabilities=

[Install]
WantedBy=multi-user.target
